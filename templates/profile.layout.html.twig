<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Личный кабинет</title>

    {% block head %}
        {{ include('profile/components/head.html.twig') }}
    {% endblock %}

    {% block stylesheet %}{% endblock %}

</head>
<body class="hold-transition skin-blue sidebar-mini {{ app.request.cookies.get("site_bar") }}">
    <div class="wrapper">

        {% block header %}
            {{ include('profile/components/header.html.twig') }}
        {% endblock %}

        {% block aside %}
            {{ include('profile/components/aside.html.twig') }}
        {% endblock %}

        <div class="content-wrapper">
            {% block content %}{% endblock %}
        </div>

        {% block footer %}
            {{ include('profile/components/footer.html.twig') }}
        {% endblock %}

        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    {% block js %}
        {{ include('profile/components/js.html.twig') }}
    {% endblock %}

    {% block Javascript %}{% endblock %}
</body>
</html>
