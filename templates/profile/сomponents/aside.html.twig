        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ asset('assets/profile/img/user2-160x160.jpg') }}" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Имя Фамилия</p>
            </div>
