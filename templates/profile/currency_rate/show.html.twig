{% extends "profile.layout.html.twig" %}
{% block content %}

    <section class="content-header">
        <h1>
            Управление курсом валюты: {{ cashbox.currency.name }}
            <small>Список</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('profile_index') }}"><i class="fa fa-dashboard"></i> Главная</a></li>
            <li><a href="{{ path('app_profile_cashbox_index') }}"><i class="fa fa-dashboard"></i> Валютные кассы</a>
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <a href="{{ path('profile_currency_rate_create', {id: cashbox.id}) }}"
                               class="btn btn-block btn-success btn-lg">
                                Новый курс
                            </a>
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>#id</th>
                                <th>Покупка</th>
                                <th>Продажа</th>
                                <th>Дата</th>
                                <th>Валютная касса</th>
                                <th>Обменный пункт</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for rate in rates %}
                                <tr>
                                    <td>{{ rate.id }}</td>
                                    <td>{{ rate.purchase }}</td>
                                    <td>{{ rate.sale }}</td>
                                    <td>{{ rate.createdAt.format("d-m-Y H:i:s") }}</td>
                                    <td>
                                        {{ cashbox.currency.name }}
                                        <img src="{{ vich_uploader_asset(cashbox.currency, 'imageFile') }}" alt=""
                                             style="height: 30px; margin-left: 10px;">
                                    </td>
                                    <td>{{ cashbox.exchangeOffice.name }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Нет данных</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

{% endblock %}