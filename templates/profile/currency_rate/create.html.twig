{% extends "layouts/profile.layout.html.twig" %}

{% block content %}

    <section class="content-header">
        <h1>
            Новый курс валюты: {{ cashbox.currency.name }}
            <small>Добавление</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('profile_index') }}"><i class="fa fa-dashboard"></i> Главная</a></li>
            <li><a href="{{ path('profile_cashbox_index') }}"><i class="fa fa-dashboard"></i> Валютные кассы</a>
            </li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Добавлениe нового курса валюты</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form) }}
                        {{ form_row(form.purchase) }}
                        {{ form_row(form.sale) }}

                        <p><small>Обменный пункт: {{ cashbox.exchangeOffice.name }}</small></p>
                        <p><small>Валюта: {{ cashbox.currency.name }}</small></p>
                        <hr>
                        {{ form_widget(form.save, {'attr' : {'class' : 'btn btn-primary btn-lg'}}) }}
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}