{% extends "profile.layout.html.twig" %}
    {% block content %}

        <section class="content-header">
            <h1>
                Данные VIP клиента
                <small>Информация</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('profile_index') }}"><i class="fa fa-dashboard"></i> Главная</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-12">
                    <!-- /.box -->
                    <!-- general form elements disabled -->
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">{{ vipClient.fullname }}</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <p>E-mail: {{ vipClient.email }}</p>
                            <br>
                            <p>Номер телефона: {{ vipClient.phone }}</p>
                            <br>
                            <p>Время создания: {{ vipClient.createdAt|date('d-m-Y') }}</p>
                            <br>
                            <p>Время обновления: {{ vipClient.updatedAt|date('d-m-Y') }}</p>
                            <br>
                            {#{% if (officeRepository.active) %}#}
                            {#<p>Активность:  работает</p>#}
                            {#{% else %}#}
                            {#<p>Активность:  не работает</p>#}
                            {#{% endif %}#}
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </section>
    {% endblock %}


{% block title %}

{% endblock %}

