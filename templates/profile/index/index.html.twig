                                <h4 class="statistic-title float-left">Общий баланс в сомах</h4>
                                <!-- /.statistic-title -->
                                <div class="statistic-details">
                                    <span class="count float-left">1095</span><!-- /.count -->
                                    <span class="statistic-icon color-danger float-right"><i
                                                class="pe-7s-credit"></i></span><!-- /.statistic-icon -->
