{% extends "layouts/profile.layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="section-content">
                <div class="content-head">
                    <h4 class="content-title">Информация о валюте</h4><!-- /.content-title -->
                </div><!-- /.content-head -->
                <div class="content-details show">
                    <p><b>Название валюты: </b> {{ currency.name }}</p>
                    <br>
                    <p><b>Название iso-кода: </b> {{ currency.iso }}</p>
                    <br>
                    <p><b>Символьное обозначение: </b> {{ currency.symbolDesignation }}</p>
                    <br>
                    <p><b>Колличество знкаов после запятой: </b> {{ currency.decimals}}</p>
                    <br>
                    <p><b>Разделитель точности: </b> < {{ currency.decimalSeparator}} ></p>
                    <br>
                    <p><b>Разделитель тысячных: </b> < {{ currency.thousandSeparator }} ></p>
                    <br>
                    <p><b>Время создание: </b> {{ currency.createAt|date('d-m-Y') }}</p>
                    <br>
                    <p><b>Время обновления: </b> {{ currency.updatedAt|date('d-m-Y') }}</p>
                    <br>
                    <img  src="{{ vich_uploader_asset(currency, 'imageFile') }}">
                </div><!-- /.content-details -->
            </div>
        </div>
    </div>
{% endblock %}
