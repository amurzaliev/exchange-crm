{% extends "layouts/profile.layout.html.twig" %}

{% block content %}

    <section class="content-header">
        <h1>
            Управление валютами
            <small>Список</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Главная</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <a href="{{ path('profile_currency_create') }}" class="btn btn-block btn-success btn-lg">
                                Добавить
                            </a>
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>#id</th>
                                <th>Наименование вылюты</th>
                                <th>Иконка</th>
                                <th>ISO-код</th>
                                <th>Колличество знаков псле запятой</th>
                                <th>Разделитель точности</th>
                                <th>Разделитель тысячных</th>
                                <th>Действия</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for currency in currencies %}
                                <tr>
                                    <td>{{ currency.id }}</td>
                                    <td>{{ currency.name }}</td>
                                    <td><img style="width: 50px; height: 25px" src="{{ vich_uploader_asset(currency, 'imageFile') }}"></td>
                                    <td>{{ currency.iso }}</td>
                                    <td>{{ currency.decimals }}</td>
                                    <td>{{ currency.decimalSeparator }}</td>
                                    <td>{{ currency.thousandSeparator }}</td>
                                    <td>
                                        <a href="{{ path('profile_currency_detail',{'id' : currency.id }) }}" title="Просмотреть запись {{ currency.name }}" class="btn btn-default">Просмотр <i class="fa fa-fw fa-eye"></i></a>
                                        <a href="{{ path('profile_currency_edit', {'id' : currency.id }) }}"  title="Редактировать запись {{ currency.name }}" class="btn btn-primary"> Редактировать <i class="fa fa-fw fa-pencil"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Нет данных</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>


{% endblock %}