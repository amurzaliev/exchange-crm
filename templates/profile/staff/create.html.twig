{% extends "profile.layout.html.twig" %}
{% block content %}

    <section class="content-header">
        <h1>
            Управление персоналом
            <small>Добавление</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Главная</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Добавление сотрудника</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form) }}
                        {{ form_row(form.user.fullName) }}
                        {{ form_row(form.user.username) }}
                        {{ form_row(form.user.password) }}
                        <br>
                        {{ form_row(form.user.enabled) }}
                        {{ form_row(form.staff.position) }}
                        {{ form_row(form.staff.permissionGroup) }}
                        <hr>
                        <br>
                        {{ form_row(form.save, {'label' : 'Добавить', 'attr' : {
                            'class' : 'btn btn-primary btn-lg'
                        }}) }}
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>

{% endblock %}