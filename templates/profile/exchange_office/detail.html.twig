{% extends "profile.layout.html.twig" %}

{% block stylesheet %}
    <style>
        .box-body .balance tr th, td {
            text-align: center;
        }

        .box-body .balance tr td input {
            width: 100px;
            padding: 2px 2px;
            font-weight: bold;
        }

        .balance table tr {
            font-size: 18px;
        }

        .balance table tr td.active-cashbox input {
            border: 1px solid #a96d0e;
            background: #b7760d;
        }

        .balance textarea {
            width: 100%;
        }

        .balance .active-cashbox {
            background: rgb(223, 138, 12);
            color: white;
        }

        .balance .active-cashbox td {
            border-right: 1px solid #df8a0b !important;
        }

        .balance .active-cashbox td input {
            background: #ad6d0d;
            border: 1px solid #df8a0b !important;
        }
    </style>
{% endblock %}

{% block content %}

    <section class="content-header">
        <h1>
            {{ exchangeOffice.name }}
            <small>Управление обменным пунктом</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('profile_index') }}"><i class="fa fa-dashboard"></i> Главная</a></li>
            <li><a href="{{ path('profile_exchange_office_index') }}"><i class="fa fa-list"></i> Список обменных
                    пунктов</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div style="margin: 1em 0 1em 0;">
            <a href="{{ path('profile_exchange_office_index') }}"
               class="btn btn-primary">
                Список обменных пунктов <i class="fa fa-fw fa-list"></i>
            </a>
            <a href="{{ path('profile_exchange_office_create') }}"
               class="btn btn-success">
                Добавить обменный пункт <i class="fa fa-fw fa-plus"></i>
            </a>
        </div>

        <div class="row">
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-warning">
                    <div class="box-header">
                        <ul class="nav nav-tabs" id="exchangeOfficeTabMenu" role="tablist">
                            <li class="nav-item active">
                                <a class="nav-link" id="exchangeOffice-tab" data-toggle="tab"
                                   href="#exchangeOffice" role="tab"
                                   aria-controls="exchangeOffice"
                                   aria-selected="true">Информация об обменном пункте</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="cashbox-tab" data-toggle="tab" href="#cashbox" role="tab"
                                   aria-controls="profile" aria-selected="false">Валютные кассы и баланс</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="currencyRate-tab" data-toggle="tab" href="#currencyRate"
                                   role="tab"
                                   aria-controls="contact" aria-selected="false">Курсы валют</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="tab-content" id="exchangeOfficeTabContent">
                            <div class="tab-pane fade active in" id="exchangeOffice" role="tabpanel"
                                 aria-labelledby="exchangeOffice-tab">
                                {% include 'profile/exchange_office/tabs/exchange_office_tab.html.twig' %}
                                <!-- Modal -->
                                <div class="form-staff">
                                    {{ include('profile/components/forms/modal_form_staff.html.twig', {'permissionGroups' : permissionGroups}) }}
                                </div>
                            </div>
                            <div class="tab-pane fade" id="cashbox" role="tabpanel" aria-labelledby="cashbox-tab">
                                {% include 'profile/exchange_office/tabs/balance_tab_html.twig' %}
                            </div>
                            <div class="tab-pane fade" id="currencyRate" role="tabpanel"
                                 aria-labelledby="currencyRate-tab">
                                Курсы валют
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

{% block Javascript %}

    <script type="text/javascript">

        $(function () {

            /** --------------------------Exchange Office----------------------------- **/

            $('.multipleSelectStaffs').fastselect();
            $('.multipleSelectCurrencies').fastselect();
            let exchangeOfficeSubmitMessage = $('.exchangeOfficeSubmitMessage');

            $('.exchangeOfficeSubmitForm').on('click', function (e) {
                e.preventDefault();
                let data = {};

                $.each($('#exchangeOfficeForm').find(':input, select'), function () {
                    if ($(this).is(':checkbox')) {
                        data[this.name] = $(this).is(':checked') ? 1 : 0;
                    } else {
                        data[this.name] = $(this).val();
                    }
                });

                console.log(data);

                $.post('{{ path('profile_exchange_office_edit_ajax') }}', data, function (data) {
                })
                    .done(function (data) {
                        let color = 'danger';
                        if (data.status) {
                            color = 'success';
                        }
                        exchangeOfficeSubmitMessage.empty();
                        exchangeOfficeSubmitMessage
                            .append('<p class="text-' + color + '">' + data.message + '</p>');
                        console.log(data);
                    })

                    .fail(function () {
                        exchangeOfficeSubmitMessage.empty();
                        exchangeOfficeSubmitMessage
                            .append('<p class="text-danger">Ошибка сервера</p>');
                        console.log(data);
                    });
            });

            $('.add_staff').on('click', function (e) {
                e.preventDefault();
            });

            $('.submit-staff-btn').on('click', function (e) {
                e.preventDefault();
                let data = {};

                $.each($('.modal-form-staff').find(':input, select'), function () {
                    if ($(this).is(':checkbox')) {
                        data[this.name] = !!$(this).is(':checked');
                    } else {
                        data[this.name] = $(this).val();
                    }
                });

                console.log(data);

                $.post('{{ path('profile_staff_create_ajax') }}', data, function (response) {
                    console.log(response);
                    $('.close').trigger('click');
                    $('.modal-form-staff').each(function () {
                        this.reset();
                    });
                    $('#selectStaffs')
                        .append("<option value='"
                            + response.staffData.id + "'>"
                            + response.staffData.fullname + "</option>");

                    $('.fstResults').append("<span class='fstResultItem'>" + response.staffData.fullname + "</span>");

                });

            });

            /** ---------------------------Balance--------------------------------- **/

            var cashboxAmount = $(".cashbox-amount");
            cashboxAmount.on("keyup", function () {
                operations(this);
            });

            cashboxAmount.on("change", function () {
                operations(this);
            });

            function operations(object) {
                var cashboxId = $(object).data("cashbox-id");
                var cashboxAmount = $(object).val();

                if (cashboxAmount < 0) {
                    cashboxAmount = 0;
                }

                $(".save-transactions").data("cashbox-id", cashboxId);

                $(".cashbox-row").removeClass("active-cashbox");
                $(".cashbox-amount").val("");
                $(object).val(cashboxAmount);
                $(".cashbox-number-" + cashboxId).addClass("active-cashbox");
            }
        });

        $(".save-transactions").on("click", function () {
            var cashboxId = $(this).data("cashbox-id");
            var cashboxNumberClass = ".cashbox-number-" + cashboxId;
            var amount = $(cashboxNumberClass + " .cashbox-amount").val();
            var exchange_office_id = "{{ exchangeOffice.id }}";
            var $btnSaveTransactions = $(this);
            var type_transaction = $("#type_transaction").val();
            var notes = $("#notes").val();
            var $boxMessage = $(".box-message");

            var data = {
                cashboxId,
                amount,
                exchange_office_id,
                type_transaction,
                notes,
            };

            $.post("{{ path('profile_monetary_operations_balance_change') }}", data)
                .done(function (response) {
                    console.log(response);

                    if (response.status) {
                        $(".cashbox-amount").val("");
                        $(".cashbox-row").removeClass("active-cashbox");
                        $boxMessage.html('<p class="bg-success">' + response.message + '</p>');
                        $btnSaveTransactions.data("cashbox-id", 0);
                        $(cashboxNumberClass + " .cashbox-allAmount").html(response.resultAmount);
                    } else {
                        $boxMessage.html('<p class="bg-danger">' + response.message + '</p>');
                    }
                })
                .fail(function (response) {
                    console.log(response);
                });
        });

    </script>
{% endblock %}